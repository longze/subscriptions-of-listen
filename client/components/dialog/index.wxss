/* components/dialog/index.wxss */

/*mask*/  
.mask {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 100;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}

.dialog {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 101;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 6px;
}

.dialog .dialog-title {
  display: block;
  border-bottom: 1rpx solid #dddbde;
  text-align: center;
  font-size: 18px;
  line-height: 3em;
}

.dialog .dialog-body {
  text-align: center;
  /* background: #333; */
}

.dialog .dialog-bottom-btns {
  display: flex;
  border-top: 1rpx solid #dddbde;
}

.dialog .dialog-bottom-btns .cancel-btn,
.dialog .dialog-bottom-btns .confirm-btn {
  flex: 1;
  border: none;
  border-radius: 0;
}

/* 第二个按钮左边框 */
.dialog .dialog-bottom-btns .btn:nth-child(2n) {
   border-left: 1rpx solid #dddbde;
}
